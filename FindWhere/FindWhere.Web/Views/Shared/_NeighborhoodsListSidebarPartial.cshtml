@model IList<Neighbourhood>

<h3>Neighborhoods</h3>
<div class="list-group">
    @for (int i = 0; i < Model.Count(); i++)
    {
        if (i == 2)
        {
            <a href="#" class="list-group-item active">@Model[i].Name</a>
        }
        else
        {
            <a href="#" class="list-group-item">@Model[i].Name</a>
        }
    }
</div>