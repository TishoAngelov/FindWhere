@model IList<Neighbourhood>

<h3>Neighborhoods</h3>
<div class="list-group" id="neighborhoodsList">
    <input type="hidden" id="selectedNeighborhoodId" name="NeighborhoodId" value="@ViewBag.NeighborhoodId">

    @for (int i = 0; i < Model.Count(); i++)
    {
        if (ViewBag.NeighborhoodId != null && Model[i].Id == ViewBag.NeighborhoodId)
        {            
            <a href="#" id="selectedNeighborhood-@Model[i].Id" class="list-group-item active">@Model[i].Name</a>
        }
        else
        {
            <a href="#" id="selectedNeighborhood-@Model[i].Id" class="list-group-item">@Model[i].Name</a>
        }
    }
</div>